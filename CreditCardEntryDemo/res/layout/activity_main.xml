<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <com.devmarvel.creditcardentry.library.CreditCardForm
        android:id="@+id/form_no_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:includeZip="false"/>

    <Button
        android:id="@+id/button_no_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/form_no_zip"
        android:padding="15dp"
        android:text="Authorize"/>

    <com.devmarvel.creditcardentry.library.CreditCardForm
        android:id="@+id/form_with_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_no_zip"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        app:includeZip="true"/>

    <Button
        android:id="@+id/button_with_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/form_with_zip"
        android:padding="15dp"
        android:text="Authorize"/>

</RelativeLayout>